                        <items>
                            <MenuItem mnemonicParsing="false" text="no.ofCopies"/>
                            <MenuItem mnemonicParsing="false" text="publisher name"/>
                            <MenuItem mnemonicParsing="false" text="Publication"/>
                            <MenuItem mnemonicParsing="false" text="no.ofCopies"/>
                            <MenuItem mnemonicParsing="false" text="no.ofCopies"/>
                            <MenuItem mnemonicParsing="false" text="no.ofCopies"/>
