<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="516.0" prefWidth="618.0" spacing="15.0" stylesheets="@style.css"
      xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="database.bookstore.viewController.SignUpController">
    <HBox prefHeight="12.0" prefWidth="455.0">
        <ImageView onMouseClicked="#onBackClick" fitHeight="24.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@../../images/pngfind.com-return-icon-png-3339700.png"/>
        </ImageView>
    </HBox>
    <HBox prefHeight="62.0" prefWidth="556.0" spacing="5.0">
        <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="112.0" prefWidth="825.0">
            <Label text="User Name"/>
            <TextField fx:id="user_name" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                       promptText="user first name"/>
        </VBox>
        <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="112.0" prefWidth="825.0">
            <Label text="Phone"/>
            <TextField fx:id="phone" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                       promptText="phone"/>
        </VBox>
    </HBox>
    <Label text="Email"/>
    <TextField fx:id="email" prefHeight="41.0" prefWidth="349.0" promptText="example@gmail.com"/>
    <HBox prefHeight="62.0" prefWidth="556.0" spacing="5.0">
        <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="112.0" prefWidth="825.0">
            <Label text="First Name"/>
            <TextField fx:id="first_name" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                       promptText="user first name"/>
        </VBox>
        <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="112.0" prefWidth="825.0">
            <Label text="Last Name"/>
            <TextField fx:id="last_name" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                       promptText="user last name"/>
        </VBox>
    </HBox>
    <Label text="Address"/>
    <TextField fx:id="address" prefHeight="41.0" prefWidth="349.0" promptText="Shipping Address"/>
    <HBox prefHeight="68.0" prefWidth="556.0" spacing="5.0">
        <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="112.0" prefWidth="825.0">
            <Label text="Password"/>
            <PasswordField  fx:id="password" promptText="Password"/>
        </VBox>
        <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="112.0" prefWidth="825.0">
            <Label text="Confirm Password"/>
            <PasswordField fx:id="confirm_password" promptText="confirm password"/>
        </VBox>
    </HBox>
    <Button fx:id="clickButton" onMouseClicked="#onSignUpClick" prefHeight="39.0" prefWidth="125.0" text="Sign Up ..." underline="true"/>
</VBox>
